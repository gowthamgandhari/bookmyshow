    ******************************NOTE FOR DELETION USE THIS GROOVY SCRIPT*******************************************************

-------Instead of Manual deletion here i used parameters to --destroy resources via pipeline --------

pipeline {
    agent any

    parameters {
        choice(
            name: 'ACTION',
            choices: ['NO', 'DESTROY'],
            description: 'Select DESTROY to remove entire EKS infra'
        )
    }

    environment {
        AWS_DEFAULT_REGION = "ap-south-1"
    }

    stages {

        stage('User Confirmation') {
            steps {
                script {
                    if (params.ACTION != "DESTROY") {
                        error("‚ùå Destroy not approved. Exiting pipeline.")
                    } else {
                        echo "‚úÖ Destroy operation approved. Proceeding..."
                    }
                }
            }
        }

        stage('Terraform Destroy Init') {
            steps {
                withAWS(credentials: 'aws-creds', region: 'ap-south-1') {
                    dir('Terraform-Code-for-EKS-Cluster/terraform') {
                        sh """
                            echo 'Initializing Terraform backend...'
                            terraform init -input=false
                        """
                    }
                }
            }
        }

        stage('Terraform Destroy') {
            steps {
                withAWS(credentials: 'aws-creds', region: 'ap-south-1') {
                    dir('Terraform-Code-for-EKS-Cluster/terraform') {
                        sh """
                            echo 'üö® Destroying all EKS Infra...'
                            terraform destroy -auto-approve
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo "Terraform destroy pipeline completed: ${currentBuild.currentResult}"
        }
    }
}
